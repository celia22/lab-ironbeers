<div id="beers_container">

  {{#each this}}
  <div class="beers_container_unit">
    {{#if image_url}}
    <img src={{image_url}} alt="beer img">
    {{/if}}
    {{#if name}}
    <h3>Name: {{name}}</h3>
    {{/if}}
    {{#if description}}
    <p>Description: {{description}}</p>
    {{/if}}
    {{#if tagline}}
    <p>Tagline: {{tagline}}</p>
    {{/if}}
  </div>
  {{/each}}

</div>